{
	"kind": "singleType",
	"collectionName": "globals",
	"info": {
		"singularName": "global",
		"pluralName": "globals",
		"displayName": "Global",
		"description": "Define global settings"
	},
	"options": {
		"draftAndPublish": false
	},
	"pluginOptions": {},
	"attributes": {
		"siteName": {
			"type": "string",
			"required": true
		},
		"favicon": {
			"type": "media",
			"multiple": false,
			"required": false,
			"allowedTypes": ["images", "files", "videos"]
		},
		"logo": {
			"type": "media",
			"multiple": false,
			"allowedTypes": ["images", "files", "videos", "audios"]
		},
		"siteDescription": {
			"type": "text",
			"required": true
		},
		"defaultSeo": {
			"type": "component",
			"component": "shared.seo",
			"repeatable": false
		},
		"mainMenu": {
			"type": "component",
			"component": "global-share.menu-item",
			"repeatable": true
		},
		"footerAboutTitle": {
			"type": "string",
			"default": "Về chúng tôi"
		},
		"footerAboutDescription": {
			"type": "text"
		},
		"footerContactTitle": {
			"type": "string",
			"default": "Liên hệ"
		},
		"footerEmail": {
			"type": "string"
		},
		"footerPhone": {
			"type": "string"
		},
		"footerCopyright": {
			"type": "string"
		},
		"footerLogo": {
			"type": "media",
			"multiple": false,
			"allowedTypes": ["images"]
		}
	}
}
